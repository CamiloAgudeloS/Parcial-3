<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="citas-root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parcial3.Controllers.CitaController">

    <children>

        <!-- ==========================
             PANEL IZQUIERDO (FORM)
        ============================ -->
        <VBox prefHeight="100.0" prefWidth="400.0" styleClass="formulario-panel" HBox.hgrow="ALWAYS">

            <children>

                <Label styleClass="titulo-principal" text="Agendar Citas" />

                <Label styleClass="label" text="Fecha:">
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                </Label>

                <Label fx:id="lblFecha" prefHeight="38.0" prefWidth="350.0" styleClass="campo-mostrado" />

                <Label styleClass="label" text="Hora:" />
                <Label fx:id="lblHora" prefHeight="38.0" prefWidth="350.0" styleClass="campo-mostrado" />

                <Label styleClass="label" text="Paciente" />
                <ComboBox fx:id="cmbPaciente" prefHeight="26.0" prefWidth="318.0" styleClass="combo-box" />

                <Label styleClass="label" text="Medico" />
                <ComboBox fx:id="cmbMedico" prefHeight="26.0" prefWidth="314.0" styleClass="combo-box" />

                <Label styleClass="label" text="Precio">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <TextField fx:id="txtPrecio" promptText="ejm:2000" styleClass="text-field" />

                <Button mnemonicParsing="false" onAction="#onAgendar" styleClass="btn-primario" text="Agendar">
                    <VBox.margin>
                        <Insets left="125.0" top="10.0" />
                    </VBox.margin>
                </Button>

            </children>
        </VBox>

        <!-- ==========================
             PANEL DERECHO (TABLA)
        ============================ -->
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="550.0" styleClass="tabla-panel" HBox.hgrow="ALWAYS">

            <children>

                <Label styleClass="titulo-principal" text="Tabla de Citas Agendadas">
                    <VBox.margin>
                        <Insets bottom="100.0" />
                    </VBox.margin>
                </Label>

                <TableView fx:id="tablaCitas" prefHeight="200.0" prefWidth="392.0" styleClass="tabla">
                    <columns>
                        <TableColumn fx:id="colFecha" prefWidth="111.19994962215424" text="Fecha" />
                        <TableColumn fx:id="colPaciente" prefWidth="118.40009307861328" text="Paciente" />
                        <TableColumn fx:id="colMedico" prefWidth="99.199951171875" text="Medico" />
                        <TableColumn fx:id="colPrecio" minWidth="0.0" prefWidth="84.80010986328125" text="Precio" />
                        <TableColumn fx:id="colHora" prefWidth="122.39987182617188" text="Hora" />
                    </columns>
                </TableView>

            </children>

        </VBox>

    </children>
</HBox>
