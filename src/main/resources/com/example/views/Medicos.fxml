<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="rootMedicos" prefHeight="600.0" prefWidth="950.0" styleClass="clientes-root" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parcial3.Controllers.MedicoController">

    <children>


        <VBox prefHeight="523.0" prefWidth="260.0" spacing="7" styleClass="formulario-panel" HBox.hgrow="ALWAYS">

            <children>

                <Label styleClass="titulo-formulario" text="Registro Medicos" />


                <Label styleClass="label-campo" text="Nombre:*">
                    <VBox.margin>
                        <Insets top="30" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="txtNombre" promptText="ej:Pepe" styleClass="campo-texto" />


                <Label styleClass="label-campo" text="Apellido:*" />
                <TextField fx:id="txtApellido" promptText="ej:Gomez" styleClass="campo-texto" />


                <Label styleClass="label-campo" text="N.documento:*" />
                <TextField fx:id="txtDocumento" promptText="ej:1203029402" styleClass="campo-texto" />


                <Label styleClass="label-campo" text="Especialidad:*" />
                <TextField fx:id="txtEspecialidad" promptText="ej:Cirujano" styleClass="campo-texto" />


                <Label styleClass="label-campo" text="N.Tarjeta Profesional*" />
                <TextField fx:id="txtTarjetaProfesional" promptText="ej:100392949" styleClass="campo-texto" />


                <Label styleClass="label-campo" text="Edad:*" />
                <TextField fx:id="txtEdad" promptText="38" styleClass="campo-texto" />


                <HBox alignment="CENTER" spacing="10" styleClass="botonera-formulario">
                    <VBox.margin>
                        <Insets top="70" />
                    </VBox.margin>

                    <children>
                        <Button onAction="#onGuardar" prefHeight="35" prefWidth="101" styleClass="btn-formulario" text="Guardar" />

                        <Button onAction="#onLimpiar" prefHeight="35" prefWidth="123.0" styleClass="btn-formulario" text="Limpiar" />
                    </children>

                </HBox>
            </children>

            <padding>
                <Insets left="5" />
            </padding>
        </VBox>

        <!-- PANEL TABLA -->
        <VBox alignment="CENTER" prefWidth="570" spacing="30" styleClass="tabla-panel" HBox.hgrow="ALWAYS">

            <children>

                <Label styleClass="titulo-tabla" text="Tabla de Medicos Clinica Central" />

                <TableView fx:id="tablaMedico" prefWidth="550.0" styleClass="tabla-clientes">

                    <columns>
                        <TableColumn fx:id="colNombre" prefWidth="100" text="Nombre" />
                        <TableColumn fx:id="colApellido" prefWidth="100" text="Apellido" />
                        <TableColumn fx:id="colDocumento" prefWidth="80" text="Documento" />
                        <TableColumn fx:id="colEspecialidad" prefWidth="130" text="Especialidad" />
                        <TableColumn fx:id="colTarjetaProfesional" prefWidth="113.5999755859375" text="Tarjeta Profesional" />
                        <TableColumn fx:id="colEdad" prefWidth="100.0000122070312" text="Edad" />
                    </columns>

                </TableView>

                <Button onAction="#onEliminar" prefHeight="50" prefWidth="190.0" styleClass="btn-eliminar" text="Eliminar Medico" />

            </children>

            <HBox.margin>
                <Insets left="10" />
            </HBox.margin>
        </VBox>

    </children>

</HBox>
